<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_margin_horizontal"
    android:layout_marginEnd="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:layout_marginBottom="@dimen/card_margin_vertical"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_padding"
        android:gravity="center_vertical">

        <!-- Modern Icon Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            app:cardCornerRadius="@dimen/icon_corner_radius"
            app:cardElevation="@dimen/icon_elevation"
            app:cardBackgroundColor="@color/primary"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/textViewCategoryIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ€„"
                android:textSize="28sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:contentDescription="@string/cd_category_item" />

        </androidx.cardview.widget.CardView>

        <!-- Title Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.Title"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="Genel Kurallar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DetaylarÄ± gÃ¶rÃ¼ntÃ¼le"
                android:textSize="@dimen/text_size_subtitle"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp"
                android:alpha="0.7" />

        </LinearLayout>

        <!-- Modern Arrow Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/primary_light">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/primary" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
