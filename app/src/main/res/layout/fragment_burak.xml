<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/modern_gradient_bg"
    android:fillViewport="true"
    tools:context=".ui.burak.BurakFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Large Emoji -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="ðŸ‘‘"
                android:textSize="64sp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/burak_title"
                android:textAppearance="@style/TextAppearance.App.Display"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:text="ðŸ€„ BURAK Ä°LE OYUN ðŸ“Š" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/burak_subtitle"
                android:textAppearance="@style/TextAppearance.App.Subtitle"
                android:textAlignment="center"
                android:textColor="@color/white"
                tools:text="Burak ile oyun istatistiklerin" />

        </LinearLayout>

        <!-- Photo Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/white"
            android:background="@drawable/glassmorphism_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <ImageView
                    android:id="@+id/imageViewBurak"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/burak_photo"
                    android:contentDescription="Burak fotoÄŸrafÄ±"
                    android:scaleType="centerCrop"
                    android:background="@drawable/burak_photo_modern"
                    android:elevation="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BURAK"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:letterSpacing="0.1" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Stats Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/white"
            android:background="@drawable/glassmorphism_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Mood Text -->
                <TextView
                    android:id="@+id/textMood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:text="ðŸŽ® OYUN BAÅžLASIN! ðŸŽ®"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />

                <!-- Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:orientation="horizontal">

                    <!-- Wins Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/holo_green_light"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="24dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ† KAZANDIM"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.App.Caption"
                                android:textColor="@color/holo_green_dark"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textWins"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.App.Display"
                                android:textColor="@color/holo_green_dark"
                                android:textSize="42sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Losses Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/holo_red_light"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="24dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ðŸ˜¢ KAYBETTÄ°M"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.App.Caption"
                                android:textColor="@color/holo_red_dark"
                                android:textStyle="bold"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textLosses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="0"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.App.Display"
                                android:textColor="@color/holo_red_dark"
                                android:textSize="42sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonWin"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:text="ðŸ† KAZANDIM"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/modern_win_button"
                        app:cornerRadius="20dp"
                        app:elevation="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonLose"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="ðŸ˜¢ KAYBETTÄ°M"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/modern_lose_button"
                        app:cornerRadius="20dp"
                        app:elevation="8dp" />

                </LinearLayout>

                <!-- Reset Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonReset"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="ðŸ”„ SIFIRLA"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/modern_reset_button"
                    app:cornerRadius="20dp"
                    app:elevation="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
